<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Choose filter"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/filter_dialog_recycler_view"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_marginTop="20dp"></android.support.v7.widget.RecyclerView>


            <com.piotrek.customspinner.CustomSpinner
                android:id="@+id/filter_dialog_frag_sortBy_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.piotrek.customspinner.CustomSpinner>


            <Button
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/filter_dialog_frag_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/button_shape"
                android:text="Done"
                android:textAppearance="@style/Widget.AppCompat.Button.Colored"
                android:textColor="#000000"
                android:textSize="20sp" />


        </LinearLayout>


    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="30dp" />


</LinearLayout>
